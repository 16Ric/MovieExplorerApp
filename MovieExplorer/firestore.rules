rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow anyone authenticated to read only 'username' and 'email'
      allow get, list: if request.auth != null;
      
      function isReadingAllowed() {
        // Only allow reading specific fields for other users
        return request.auth.uid != userId;
      }
      
      allow read: if request.auth != null && (
        // Owner can read all
        request.auth.uid == userId
        // Others can read only 'username' and 'email'
        || (isReadingAllowed() && 
            (request.resource.data.keys().hasOnly(['username','email']) 
             || resource.data.keys().hasOnly(['username','email']))
        )
      );

      // Only owner can write to their document
      allow write: if request.auth != null && request.auth.uid == userId;
    }

  }
}
